<div class="ex-download-form ">
    <form id="downloadForm" data-success-message="We have recieved your message"
          data-error-message="We could not recieve this, Please try again later" data-ok-button="OK">


        <section class="container">
            <div class="row ex-sitecore-form w-100 mb-7">
                <div class="col-12">
                    <h4 class="ex-sitecore-form__title mb-4 text-capitalize">Custom Download Form</h4>
                </div>
                <div class="col-lg-4">
                    <div class="ex-sitecore-form__input ex-sitecore-form__input--disabledx position-relative mb-4">
                        <label class="ex-sitecore-form__label" for="Name"> Name</label>
                        <input name="Name" id="Name" type="text" placeholder="Name" required
                               data-msg-required="Name is required" class="ex-sitecore-form__input" />
                        <div class="field-validation-error error-block mt-2"></div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="ex-sitecore-form__input position-relative mb-4">

                        <label class="ex-sitecore-form__label" for="Email">Email</label>
                        <input name="Email" id="Email" type="Email" placeholder="Email" required
                               data-msg-required="Email is required" class="ex-sitecore-form__input" />
                        <div class="field-validation-error error-block mt-2"></div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="captcha-wrapper g-recaptcha"
                         data-name="recaptcha"
                         data-sitekey="6LdTYDAaAAAAACcl8TOHfMZvcPizqtDaeii8ey0t"
                         data-msg-required="reCAPTCHA is mandatory"></div>

                    
                </div>

                <div class="col-12">
                    <button class="button floated-element-left mt-3" type="submit" id="submit" data-ds="@datasource" data-currentPage="@currentPage" disabled >Submit</button>


                </div>
            </div>
            <div class="ex-download-form__content">

            </div>
        </section>


    </form>

</div>
