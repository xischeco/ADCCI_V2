<form method="post" action="@Url.Action("downloadFile", "DownloadForm",new { ds = datasource})">
    <div class="ex-download-form-response" id="downloadButtonSection" style="display:none;">
        <div class="ex-download-form-response__title">
            <h3>Thanks for the input, you can download the form</h3>
        </div>
        <button class="button floated-element-left mt-3" type="submit">
            DOWNLOAD PDF
        </button>
    </div>
</form>

  <script type="text/javascript">
    var onloadCallback = function () {
      var event = new Event('grecaptcha-loaded');
      document.dispatchEvent(event);
    };
  </script>
  <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit&lang=en" async defer></script>

